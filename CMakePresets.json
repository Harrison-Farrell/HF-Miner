{
  "version": 3,
  "configurePresets": [
    {
      "name": "Default-Release",
      "description": "Default configuration with all options disabled",
      "hidden": false,
      "binaryDir": "${sourceDir}/build/release",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_UNIT_TESTING": "OFF",
        "ENABLE_FORMAT": "OFF",
        "ENABLE_CPPCHECK": "OFF",
        "ENABLE_DOXYGEN": "OFF",
        "ENABLE_COVERAGE": "OFF",
        "ENABLE_MEMCHECK": "OFF",
        "ENABLE_BENCHMARKS": "OFF"
      }
    },
    {
      "name": "Developer",
      "description": "Configuration with all options enabled",
      "hidden": false,
      "binaryDir": "${sourceDir}/build/developer",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_UNIT_TESTING": "ON",
        "ENABLE_FORMAT": "ON",
        "ENABLE_CPPCHECK": "ON",
        "ENABLE_COVERAGE": "ON",
        "ENABLE_MEMCHECK": "ON",
        "ENABLE_BENCHMARKS": "ON",
        "ENABLE_DOXYGEN": "ON"
      }
    },
    {
      "name": "Release-with-options",
      "description": "Release configuration with all options enabled",
      "hidden": false,
      "binaryDir": "${sourceDir}/build/release-with-options",
      "inherits": "Developer",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "testing-only",
      "description": "Testing and coverage analysis configuration",
      "hidden": false,
      "binaryDir": "${sourceDir}/build/testing-only",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_UNIT_TESTING": "ON",
        "ENABLE_FORMAT": "OFF",
        "ENABLE_CPPCHECK": "OFF",
        "ENABLE_DOXYGEN": "OFF",
        "ENABLE_COVERAGE": "ON",
        "ENABLE_MEMCHECK": "ON",
        "ENABLE_BENCHMARKS": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Default-Release-build",
      "description": "Build with default release preset",
      "configurePreset": "Default-Release",
      "inheritConfigureEnvironment": true
    },
    {
      "name": "Developer-build",
      "description": "Build with developer preset",
      "configurePreset": "Developer",
      "inheritConfigureEnvironment": true
    },
    {
      "name": "Release-with-options-build",
      "description": "Release build with all options",
      "configurePreset": "Release-with-options",
      "inheritConfigureEnvironment": true
    }
  ],
  "testPresets": [
    {
      "name": "all-enabled-test",
      "description": "Run tests with all-enabled preset",
      "configurePreset": "Developer",
      "inheritConfigureEnvironment": true,
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "testing-only-test",
      "description": "Run tests with testing-only preset",
      "configurePreset": "testing-only",
      "inheritConfigureEnvironment": true,
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
